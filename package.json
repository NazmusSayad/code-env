{
  "name": "editor-context",
  "version": "1.0.0",
  "icon": "public/icon.png",
  "publisher": "NazmusSayad",
  "displayName": "Editor Context",
  "description": "A VS Code extension that automatically detects your IDE environment and exposes it as context variables for cross-editor compatible configurations and keybindings.",
  "scripts": {
    "lint": "eslint ./src",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --watch --project tsconfig.json",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "build": "npm run check-types && npm run lint && node esbuild.js --production && vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.17.30",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "esbuild": "^0.25.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vsce": "^2.15.0"
  },
  "main": "./dist/index.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "Keymaps",
    "Extension Packs"
  ],
  "keywords": [
    "code-env",
    "editor-env",
    "editor-context",
    "ide-detection",
    "context-variables",
    "keybindings",
    "cross-editor",
    "vscode",
    "cursor",
    "windsurf",
    "vscodium",
    "environment",
    "conditional-settings",
    "when-clause"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/NazmusSayad/vscode.editor-context.git"
  }
}
